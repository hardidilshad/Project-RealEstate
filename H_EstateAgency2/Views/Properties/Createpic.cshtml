@model H_EstateAgency2.Models.Picture

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Picture</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="PicName" class="control-label"></label>
                <input asp-for="PicName" class="form-control" />
                <span asp-validation-for="PicName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PropertyId" class="control-label"></label>
                <select asp-for="PropertyId" class="form-control" asp-items="ViewBag.PropertyId"></select>
            </div>

        </form>

        <form asp-action="UploadImage" asp-controller="Pictures" method="post" enctype="multipart/form-data">
            <input type="file" id="file1" name="file1" multiple />
            @*<button type="submit">Upload File(s)</button>*@
            <div class="form-group">
                <input multiple type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
